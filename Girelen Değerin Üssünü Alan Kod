import java.util.Scanner;
public class Teksayi {
    public static void main(String[] args) {
    System.out.println("Değer Giriniz: ");
    Scanner girdeger=new Scanner(System.in);
    int d1=girdeger.nextInt();
    System.out.println("Kaçıncı Kuvvet Olsun: ");
    Scanner kuvvet=new Scanner(System.in);
    int kuv=kuvvet.nextInt();
    int d2=d1;  
    for(int i =0;i<kuv;i++){
         
          System.out.println("Sonuç: "+d1);
        int a =d1*d2;
        d1=a;
            
        }           
         }
    }    
